<% if user_signed_in? %>
  <p style="color: green"></p>

  <div class="card">
    <div class="card-header">
      <h1>Friends</h1>
      <%= link_to "New friend", new_friend_path, class:"btn btn-success" %>
    </div>
    <div class="card-body">
      <div id="friends">
        <% @friends.each do |friend| %>
          <%= render friend %>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <h1>Hello World</h1>
  This is my First Rails Webpage
<% end %>
